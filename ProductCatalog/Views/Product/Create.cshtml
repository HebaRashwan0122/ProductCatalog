@model ProductCatalog.Service.ViewModels.ProductCreateViewModel

@* @{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
} *@

<div class="container p-3 my-3 border">
    <h1>Create New Product</h1>

    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    <div class="row">
        <div class="col-sm-6">
            <hr />
            <form method="post" enctype="multipart/form-data" asp-action="Create">
                 
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="StartDate" class="control-label"></label>
                    <input asp-for="StartDate" class="form-control" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DurationInHours" class="control-label"></label>
                    <input asp-for="DurationInHours" class="form-control" />
                    <span asp-validation-for="DurationInHours" class="text-danger"></span>
                </div>

               
                <div class="form-group">
                    <label class="control-label">Category</label>
                    @Html.DropDownListFor(model => model.SelectedCategory, Model.CategoriesList, null, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label class="control-label">Product Image</label>
                    <input class="form-control" type="file" name="file" />
                </div>
                <br /><br />

                <div class="form-group">
                    <input class="btn btn-primary" type="submit" value="Save" />
                    <a class="btn btn-danger" asp-action="Index">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>
